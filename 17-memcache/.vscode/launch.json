{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python debugger",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "outputCapture": "std"
        },
        {
            "name": "Test script debugger",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["test_server.py"],
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/17-memcache",
            "justMyCode": true
        }
    ]
}
