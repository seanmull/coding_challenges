{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python debugger",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "outputCapture": "std"
        },
       {
    "name": "Python Debugger: Flask",
    "type": "debugpy",
    "request": "launch",
    "module": "flask",
    "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "1"
    },
    "args": [
        "run",
        "--no-debugger",
        "--no-reload"
    ],
    "jinja": true,
    "justMyCode": true
},

    ]
}
